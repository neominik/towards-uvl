namespace root

features
	root	
		mandatory
			SPLIT_PTLOCK_CPUS
			NR_QUICK
			NOMMU_INITIAL_TRIM_EXCESS
			FLATMEM_MANUAL
			DISCONTIGMEM_MANUAL
			SPARSEMEM_MANUAL
			DEFAULT_MMAP_MIN_ADDR
			ZONE_DMA_FLAG

		optional
			SELECT_MEMORY_MODEL
			PHYS_ADDR_T_64BIT
			MMU_NOTIFIER
			SPARSEMEM
			FLAT_NODE_MEM_MAP
			PAGEFLAGS_EXTENDED
			FLATMEM
			ARCH_SUPPORTS_MEMORY_FAILURE
			BOUNCE
			MEMORY_FAILURE	
				optional
					HWPOISON_INJECT
			SPARSEMEM_VMEMMAP
			HAVE_MEMORY_PRESENT
			SPARSEMEM_VMEMMAP_ENABLE
			SPARSEMEM_STATIC
			NEED_MULTIPLE_NODES
			MIGRATION
			KSM
			VIRT_TO_BUS
			SPARSEMEM_EXTREME
			DISCONTIGMEM
			MEMORY_HOTPLUG	
				optional
					MEMORY_HOTREMOVE
					MEMORY_HOTPLUG_SPARSE

constraints
	((DISCONTIGMEM | SPARSEMEM) & !FLATMEM_MANUAL | FLATMEM) & (!FLATMEM | !DISCONTIGMEM & !SPARSEMEM | FLATMEM_MANUAL)
	(SPARSEMEM | FLAT_NODE_MEM_MAP) & (!FLAT_NODE_MEM_MAP | !SPARSEMEM)
	(!SPARSEMEM | SPARSEMEM_STATIC | SPARSEMEM_EXTREME) & (!SPARSEMEM_EXTREME | SPARSEMEM & !SPARSEMEM_STATIC)
	SPARSEMEM & SPARSEMEM_VMEMMAP_ENABLE | (!SPARSEMEM | !SPARSEMEM_VMEMMAP_ENABLE | SPARSEMEM_VMEMMAP) & (!SPARSEMEM_VMEMMAP | SPARSEMEM & SPARSEMEM_VMEMMAP_ENABLE)
	(!SPARSEMEM | !MEMORY_HOTPLUG | MEMORY_HOTPLUG_SPARSE) & (!MEMORY_HOTPLUG_SPARSE | SPARSEMEM & MEMORY_HOTPLUG)