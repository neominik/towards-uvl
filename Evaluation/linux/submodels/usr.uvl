namespace root

features
	root	
		mandatory
			INITRAMFS_COMPRESSION_NONE
			INITRAMFS_COMPRESSION_GZIP
			INITRAMFS_COMPRESSION_BZIP2
			INITRAMFS_COMPRESSION_LZMA
			INITRAMFS_SOURCE	
				mandatory
					INITRAMFS_ROOT_UID
					INITRAMFS_ROOT_GID

		optional
			RD_GZIP
			RD_BZIP2
			RD_LZMA

constraints
	RD_GZIP | !INITRAMFS_COMPRESSION_GZIP
	RD_BZIP2 | !INITRAMFS_COMPRESSION_BZIP2
	RD_LZMA | !INITRAMFS_COMPRESSION_LZMA